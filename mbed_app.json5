{
  //requires: ["drivers-usb"],
  config: {
    "sd-cmd-timeout": {
      help: "Timeout in ms for SD card command response",
      value: 1000,
    },
    "sd-cmd0-retries": {
      help: "Number of retries for CMD0",
      value: 3,
    },
  },
  target_overrides: {
    "*": {
      "platform.stdio-baud-rate": 115200,
      "platform.stdio-buffered-serial": 1,
      "target.console-usb": false,
      "target.console-uart": false,
      "sd.SPI_MOSI": "p3",
      "sd.SPI_MISO": "p0",
      "sd.SPI_CLK": "p2",
      "sd.SPI_CS": "p1",
      "target.features_add": ["STORAGE"],
      "target.components_add": ["SD"],
      //"target.device_has_add": ["USBDEVICE"],
    },
  },
}
